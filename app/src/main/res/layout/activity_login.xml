<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4a0072"

    tools:context=".login.LoginActivity">

    <EditText
        android:id="@+id/email_editText_sign_in"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/edit_text_background_rounded"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_editText2_sign_in"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_background_rounded"
        android:ems="10"

        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/email_editText_sign_in"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_editText_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/email_editText_sign_in" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_purple"
        android:text="Sign In"
        android:textColor="@android:color/white"

        app:layout_constraintEnd_toEndOf="@+id/password_editText2_sign_in"
        app:layout_constraintStart_toStartOf="@+id/password_editText2_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/password_editText2_sign_in" />

    <TextView
        android:id="@+id/back_sign_in_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:text="Back to registration"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_button"
        app:layout_constraintStart_toStartOf="@+id/sign_in_button"
        tools:layout_editor_absoluteY="368dp" />
</android.support.constraint.ConstraintLayout>